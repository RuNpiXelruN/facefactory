<div class="index-wrapper">
  <h1>Welcome to Face Factory</h1>
    <% if user_signed_in? %>
      <% if current_user.profile %>
        <div class="row">
          <div class="col-md-4">
            <%= render 'status_updates/form' %>
              <% @all_status_updates.each do |status| %>
                <div class="card card-block">
                  <p><%= link_to status.user.profile.full_name, profile_path(status.user) %></p>
                  <p><%= status.status %></p>
                  <p>Posted <%= time_ago_in_words(status.created_at) + ' ago' %></p>
                </div>
              <% end %>
          </div>
        </div>
      <% else %>
        <%= render 'profiles/form' %>
      <% end %>
    <% end %>
</div>
